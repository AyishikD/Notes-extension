{
  "manifest_version": 3,
  "name": "YouTube Notes Extension",
  "version": "1.0",
  "description": "Take notes on important points while watching YouTube videos.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
